{% extends 'AdminBundle:_layout:admin.html.twig' %}

{% block style %}

    <link rel="stylesheet" href="{{ asset('bundles/admin/assets/examples/css/pages/profile.min.css') }}">

{% endblock %}

{% block body %}

    <body class="site-navbar-small page-profile">

{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
            <!-- Page Widget -->
            <div class="widget widget-shadow text-center">
                <div class="widget-header">
                    <div class="widget-header-content">
                        <a class="avatar avatar-lg" href="javascript:void(0)">
                            <img src="{{ asset('bundles/admin/assets/images/logo-blue.png') }}" alt="...">
                        </a>
                        <h4 class="profile-user">{{ user.firstname }} {{ user.lastname }}</h4>
                        <h5>({{ user.username }})</h5>
                        {% if user.comment %}
                            <p class="profile-job">{{ user.comment }}</p>
                        {% endif %}
                        <p>{{ user.email }}</p>
                        <div class="profile-social">
                            <a class="icon bd-twitter" href="javascript:void(0)"></a>
                            <a class="icon bd-facebook" href="javascript:void(0)"></a>
                            <a class="icon bd-dribbble" href="javascript:void(0)"></a>
                            <a class="icon bd-github" href="javascript:void(0)"></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Page Widget -->
        </div>

        <div class="col-md-9">

            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="icon md-account" aria-hidden="true"></i>Profile Information</h3>
                </div>
                <div class="panel-body">

                    {% include 'AdminBundle:_includes:notifications.html.twig' %}

                    <div class="example-wrap margin-lg-0">
                        <div class="nav-tabs-horizontal">
                            <ul class="nav nav-tabs nav-tabs-line" data-plugin="nav-tabs" role="tablist">
                                <li class="active" role="presentation"><a data-toggle="tab" href="#exampleTabsLineOne" aria-controls="exampleTabsLineOne" role="tab">Basic information</a></li>
                                <li role="presentation"><a data-toggle="tab" href="#exampleTabsLineTwo" aria-controls="exampleTabsLineTwo" role="tab">Password</a></li>
                            </ul>
                            <div class="tab-content padding-top-20">
                                <div class="tab-pane active" id="exampleTabsLineOne" role="tabpanel">
                                    {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                    {{ form_end(form) }}
                                </div>
                                <div class="tab-pane" id="exampleTabsLineTwo" role="tabpanel">
                                    {{ form_start(passwordForm) }}
                                    {{ form_widget(passwordForm) }}
                                    {{ form_end(passwordForm) }}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}